/* components/Card/Card.wxss */

.card {
  background: #fff;
  padding: 10px 10px 0 10px;
  border-radius: 4px;
  margin-bottom: 20px;
}

.ellipsis {
  display:-webkit-box;
  overflow: hidden; 
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-line-clamp: 2;
  -webkit-box-orient:vertical;
}

.card .header {
  display: flex;
}

.card .header .tag {
  flex: initial;
}

.card .header .num {
  flex: 1;
  text-align: right;
  font-size: 14px;
  color: #b2b2b2;
}

.card .header .highlight {
  color: #09bb07;
  display: inline-block;
}

.card .title {
  font-size: 17px;
  color: #353535;
  padding-top: 4px;
  text-align: left;
}

.card .body {
  padding-bottom: 10px;
  border-bottom: 1px solid #eeeeee;
}

.card .abstract {
  font-size: 14px;
  color: #b2b2b2;
  padding: 4px 0;
}

.card .footer {
  display: flex;
  align-items: center;
  padding: 6px 0;
  margin-top: 4px;
}

.card .footer image {
  width: 30px;
  height: 30px;
  border-radius: 100%;
  flex: initial;
}

.card .footer .author {
  color: #000;
  font-size: 14px;
  padding-left: 6px;
}

.card .footer .post-date {
  flex: 1;
  text-align: right;
  color: #b2b2b2;
  font-size: 14px;
}