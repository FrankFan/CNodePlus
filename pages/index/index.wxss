.container {
  margin: 0 20rpx 20rpx 20rpx;
}

.loading-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-self: center;
  justify-content: center;
}

.no-data {
  display: none;
}

.topic-list-item {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ececec;
  margin: 10rpx;
}

.topic-list-item image {
  flex: initial;
  width: 50px;
  height: 50px;
  margin: 20rpx;
}

.topic-list-item .text {
  flex: 1;
  font-size: 16px;
}

.topic-list-item .author {
  margin: 5px;
  color: #1aad16;
  font-size: 16px;
}

.footer-loading {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-self: center;
  justify-content: center;
}
