.container {
  padding-bottom: 10px;
  font-family: "STHeitiTC-Light", "Microsoft YaHei Light", "Hiragino Sans GB", -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
  line-height: 1.8;
  word-wrap: break-word;
  word-break:break-all;
}

.swiper {
  padding-top: 39px;
}

.swiper-tab{
  background: #fff;
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}
.swiper-tab-item{
  width: 30%; 
  color:#434343;
}
.active{
  color:#1AAD16;
  border-bottom: 4rpx solid #1AAD16;
}
swiper{
  text-align: center;
}

.footer {
  display: flex;
  justify-content: center;
}

.footer .noMore {
  color: #888888;
  justify-content: center;
  font-size: 14px;
}
