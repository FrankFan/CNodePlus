<!--index.wxml-->
<view class="container">
  
  <view class="swiper-tab">
    <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">精华</view>
    <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">分享</view>
    <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">招聘</view>
  </view>

  <swiper class="swiper" current="{{currentTab}}" duration="300" style="height:{{height -45 }}px" bindchange="swiperTab">
    <swiper-item >
      <scroll-view 
        class='scroll-view'
        scroll-y="true" 
        enable-back-to-top="true"
        style="height:{{ height - 45 }}px"
        data-tab='good' 
        bindscrolltolower="loadMore" 
        bindscrolltoupper="refresh">
        <card 
          wx:for="{{ good.list }}" 
          wx:for-item="item" 
          wx:key=" {{ item.index }}"
          data-id="{{ item.id }}"
          obj="{{ item }}"
          bindtap="bindViewTap">
        </card>
        <view class="footer">
          <view wx:if="{{hasMore}}" class='footer-loading'>
            <icon type="waiting" size="25" />
            <text>玩命加载中...</text>
          </view>
          <view class='noMore' wx:if="{{ noMore }}">
            <text>没有更多内容</text>
          </view>
        </view>
      </scroll-view>
    </swiper-item>

    <swiper-item>
      <scroll-view 
        class='scroll-view'
        scroll-y="true" 
        enable-back-to-top="true"
        style="height:{{ height - 45 }}px"
        data-tab='share' 
        bindscrolltolower="loadMore" 
        bindscrolltoupper="refesh">
        <card 
          wx:for="{{ share.list }}" 
          wx:for-item="item" 
          wx:key=" {{ item.index }}"
          data-id="{{ item.id }}"
          obj="{{ item }}"
          bindtap="bindViewTap">
        </card>
        <view class="footer">
          <view wx:if="{{hasMore}}" class='footer-loading'>
            <icon type="waiting" size="25" />
            <text>玩命加载中...</text>
          </view>
          <view class='noMore' wx:if="{{ noMore }}">
            <text>没有更多内容</text>
          </view>
        </view>
      </scroll-view>
    </swiper-item>

    <swiper-item>
      <scroll-view 
        class='scroll-view'
        scroll-y="true" 
        enable-back-to-top="true"
        style="height:{{ height - 45 }}px"
        data-tab='job' 
        bindscrolltolower="loadMore" 
        bindscrolltoupper="refesh">
        <card 
          wx:for="{{ job.list }}" 
          wx:for-item="item" 
          wx:key=" {{ item.index }}"
          data-id="{{ item.id }}"
          obj="{{ item }}"
          bindtap="bindViewTap">
        </card>
        <view class="footer">
          <view wx:if="{{hasMore}}" class='footer-loading'>
            <icon type="waiting" size="25" />
            <text>玩命加载中...</text>
          </view>
          <view class='noMore' wx:if="{{ noMore }}">
            <text>没有更多内容</text>
          </view>
        </view>
      </scroll-view>
    </swiper-item>

</swiper>

</view>